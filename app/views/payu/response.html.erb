<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-6">
        <%= link_to "Volver a los pagos", root_path, class: "btn btn-link text-primary" %>
      
        <table class="table table-bordered mt-3">
            <tr>
            <th class="bg-info text-white">Referencia</th>
            <td><%= @charge.uid %></td>
            </tr>
            <tr>
            <th class="bg-info text-white">Estado</th>
            <td><%= params["lapTransactionState"] %></td>
            </tr>
            <tr>
            <th class="bg-info text-white">Fecha</th>
            <td><%= params["processingDate"] %></td>
            </tr>
            <tr>
            <th class="bg-info text-white">Descripción</th>
            <td><%= params["description"] %></td>
            </tr>
            <tr>
            <th class="bg-info text-white">Valor</th>
            <td><%= @charge.amount %></td>
            </tr>
            <tr>
            <th class="bg-info text-white">Respuesta</th>
            <td><%= params["lapResponseCode"] %></td>
            </tr>
            <tr>
            <th class="bg-info text-white">Método de pago</th>
            <td><%= params["lapPaymentMethodType"] %></td>
            </tr>
            <tr>
            <th class="bg-info text-white">Mensaje</th>
            <td><%= params["message"] %></td>
            </tr>
        </table>
      
    </div>
  </div>
</div>
