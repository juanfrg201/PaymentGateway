<div class="container charge-form pt-4">
  <div class="row justify-content-center mt-5">
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <%= form_with model: @charge, method: :post, local: true do %>
            <div class="form-group mt-3">
              <label for="amount">Valor:</label>
              <input type="text" id="amount" name="amount" class="form-control">
            </div>

            <div class="text-right">
              <%= link_to "Cancelar", root_path, class: "btn btn-outline-secondary mr-2 mt-3" %>
              <%= submit_tag "Ir a Pagar", class: "btn btn-primary mt-3" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

